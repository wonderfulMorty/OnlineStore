<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>pers.sakurasora.onlinestore.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PrivilegeUserFilter</filter-name>
    <filter-class>pers.sakurasora.onlinestore.web.filter.PrivilegeUserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrivilegeUserFilter</filter-name>
    <url-pattern>/jsp/cart.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PrivilegeAdminFilter</filter-name>
    <filter-class>pers.sakurasora.onlinestore.web.filter.PrivilegeAdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrivilegeAdminFilter</filter-name>
    <url-pattern>/jsp/admin/home.jsp</url-pattern>
    <url-pattern>/jsp/admin/category/*</url-pattern>
    <url-pattern>/jsp/admin/order/*</url-pattern>
    <url-pattern>/jsp/admin/product/*</url-pattern>
  </filter-mapping>
  
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
</web-app>